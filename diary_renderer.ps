/pagePaddingTB pagePaddingTB 3 div def

/oldCageHeight cageHeight def
/cageWidth pageW 2 div pagePaddingLR 2 mul sub def
/cageHeight pageH 2 div pagePaddingTB 2 mul sub def

%!ps

%calculate the new scaling. slightly reduce the calculated value-
%for better spacing between rows.
/newFontScale cageHeight oldCageHeight div .8 mul def
%rescale all the parameters
/headerFontHeight headerFontHeight newFontScale mul def
/dateFontHeight dateFontHeight newFontScale mul def
/LegendFontHeight LegendFontHeight newFontScale mul def
/poyacircleRadius poyacircleRadius newFontScale mul def
/holidayRectWidth holidayRectWidth newFontScale mul def

/headerHeight headerHeight newFontScale mul def
/cageHeight cageHeight headerHeight sub def

/gridLinePitch 7 mm def

%llcX, llcY, width, height
/exercise_book_page {
	/ph exch def
	/pw exch def
	/py0 exch def
	/px0 exch def
	/lineCount ph pagePaddingTB sub gridLinePitch div truncate def
	
	/x px0 pagePaddingLR add def
	/y py0 gridLinePitch 2 mul add def
	%/lineCount 1 sub def
	.26 .64 .96 setrgbcolor
	2 1 lineCount {
		/lineIndex exch def
		%gridLinePitch ==
		x y moveto
		x pw pagePaddingTB 2 mul sub add y lineto
		stroke
		/y y gridLinePitch add def
	} for
	%draw the margin line (red-just margin)
	/justMarginGap .75 inch def
	.90 .24 .34 setrgbcolor
	/x px0 pagePaddingLR add justMarginGap add def
	x py0 pagePaddingTB add moveto
	x py0 ph add pagePaddingTB sub lineto
	stroke
} def

%fontHeight
/getPitch {
	1.6 mul %fontHeight + 1.2 lineGap
} def

%llcX, llcY, cageWidth, fontHeight, monthIndex
/print_special_days {
	/monthI exch 1 sub def
	/fHeight exch def
	/cw exch def
	/y0 exch def
	/x0 exch def
	/monthEntry holidays monthI get def
	gsave
	0.1 setgray
	/tmpStr 20 string def
	selectedFont findfont fHeight scalefont setfont
	/sDayCount monthEntry length def
	0 2 sDayCount 1 sub {
		/x x0 def
		/dayI exch def
		/dayEntry monthEntry dayI get def
		dayEntry 0 get tmpStr cvs
		(: ) strcat
		dayEntry 1 get strcat
		x y0 moveto
		show
		dayI 1 add sDayCount lt {
			/dayI dayI 1 add def
			/x x cw 2 div add def
			/dayEntry monthEntry dayI get def
			dayEntry 0 get tmpStr cvs
			(: ) strcat
			dayEntry 1 get strcat
			x y0 moveto
			show
		} if
		/y0 y0 fHeight getPitch sub def
	} for
	grestore
} def

%llcX, llcY, cageWidth, cageHeight, headerHeight, year
/printYear {
	/yearPadding 5 def
	/year exch def
	/headerH exch def
	/ch exch def
	/cw exch def
	/y0 exch yearPadding sub def
	/x0 exch yearPadding sub def
	/tmpString 20 string def
	/strYear year tmpString cvs def
	
	gsave
	.6 setgray
	selectedFont findfont headerFontHeight scalefont setfont
	strYear x0 cw add y0 ch add headerH add true DrawText_right_bottom_aligned
	grestore
} def


1 2 12 {
	/monthIndex_ exch def
	/xStart pagePaddingLR def
	/yStart pageH pagePaddingTB sub cageHeight headerHeight add sub def
	/sDayFontH 8 def
	
	calYear monthIndex_ xStart yStart DrawMonth
	xStart yStart cageWidth cageHeight headerHeight calYear printYear
	pageW 2 div pageH 2 div pageW 2 div pageH 2 div exercise_book_page
	xStart yStart sDayFontH getPitch sub cageWidth sDayFontH monthIndex_ print_special_days

	/yStart yStart cageHeight headerHeight add pagePaddingTB 1.5 mul add sub def
	calYear monthIndex_ 1 add xStart yStart DrawMonth
	xStart yStart cageWidth cageHeight headerHeight calYear printYear
	pageW 2 div .5 pagePaddingTB mul pageW 2 div pageH 2 div exercise_book_page
	xStart yStart sDayFontH getPitch sub cageWidth sDayFontH monthIndex_ 1 add print_special_days
	showpage
} for



