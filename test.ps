/DrawText_center_aligned {
	gsave
		moveto
		/fScale currentfont /FontMatrix get 0 get def
		dup stringwidth pop 2 div neg
		currentfont /FontBBox get
		dup 3 get 2 div exch 1 get add neg fScale  mul
		rmoveto
		show
	grestore

} def

